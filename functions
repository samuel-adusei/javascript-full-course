// This will demonstrate, the use in function which is reusable code. 
// This will show the different uses of functions of the ages of  


function calculateAge(yearOfBirth) {
	var age = 2017 - yearOfBirth;
	return age;
}

var ageJohn = calculateAge(1990);
var ageMike = calculateAge(1969);
var ageMary = calculatingAge(1948);

function yearsUntilRetriement(name, year) {
	var age = calculatingAge(year)
	var retirement = 65 - age;
	

	if (retirement >= 0) {
		console.log(name + 'retire in ' + retirement + 'years.');
		} else {
			console.log(name + 'is already retired');
		}
	}


yearsUntilRetirement('John', 1990);
yearsUntilRetirement('Mike', 1969);
yearsUntilRetirement('Mary', 1948);






